<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Name_lay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Name"
            android:paddingRight="10dp"
            android:id="@+id/first_name"
            android:textStyle="bold"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/name_hint"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_toRightOf="@+id/first_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/name_hint"
            android:id="@+id/name_value"
            android:paddingLeft="5dp"
            />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Name_lay"
        android:id="@+id/address_lay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Address"
            android:paddingRight="10dp"
            android:id="@+id/address"
            android:textStyle="bold"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/address_hint"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_toRightOf="@+id/address"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/address_hint"
            android:id="@+id/address_value"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/address_lay"
        android:id="@+id/Gender_lay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Gender"
            android:paddingRight="10dp"
            android:id="@+id/gender"
            android:textStyle="bold"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/gender_hint"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_toRightOf="@+id/gender"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/gender_hint"
            android:id="@+id/gender_value"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Gender_lay"
        android:id="@+id/Dob_lay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="DOB"
            android:paddingRight="10dp"
            android:id="@+id/Dob"
            android:textStyle="bold"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/Dob_hint"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_toRightOf="@+id/Dob"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/Dob_hint"
            android:id="@+id/Dob_value"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Dob_lay"
        android:id="@+id/Designation_lay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Designation"
            android:paddingRight="10dp"
            android:id="@+id/Designation"
            android:textStyle="bold"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/Designation_hint"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_toRightOf="@+id/Designation"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/Designation_hint"
            android:id="@+id/Designation_value"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Designation_lay"
        android:id="@+id/Mobile_lay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Mobile"
            android:paddingRight="10dp"
            android:id="@+id/Mobile"
            android:textStyle="bold"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/Mobile_hint"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_toRightOf="@+id/Mobile"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/Mobile_hint"
            android:id="@+id/Mobile_value"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Mobile_lay"
        android:id="@+id/Email_lay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Email"
            android:paddingRight="10dp"
            android:id="@+id/Email"
            android:textStyle="bold"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/Email_hint"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_toRightOf="@+id/Email"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/Email_hint"
            android:id="@+id/Email_value"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/Email_lay"
        android:id="@+id/Nationality_lay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Nationality"
            android:paddingRight="10dp"
            android:id="@+id/Nationality"
            android:textStyle="bold"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/Nationality_hint"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_toRightOf="@+id/Nationality"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/Nationality_hint"
            android:id="@+id/Nationality_value"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Nationality_lay"
        android:id="@+id/Language_lay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Language"
            android:paddingRight="10dp"
            android:id="@+id/Language"
            android:textStyle="bold"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/Language_hint"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_toRightOf="@+id/Language"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/Language_hint"
            android:id="@+id/Language_value"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Language_lay"
            android:id="@+id/Skills_lay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Skills"
                android:paddingRight="10dp"
                android:id="@+id/Skills"
                android:textStyle="bold"
                android:textSize="13dp"
                />
            <TextView
                android:id="@+id/Skills_hint"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_toRightOf="@+id/Skills"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@+id/Skills_hint"
                android:id="@+id/Skills_value"
                android:paddingLeft="5dp"
                />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>